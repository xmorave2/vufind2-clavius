<form action="<?=$this->url() ?>/MyResearch/Email" method="post" name="bulkEmail">
  <? if ($errorMsg): ?><div class="error"><?=$this->translate($errorMsg) ?></div><? endif; ?>
  <? if ($infoMsg): ?><div class="info"><?=$this->translate($infoMsg) ?></div><? endif; ?>

  <div id="popupMessages"></div>
  <div id="popupDetails"> 
    <? foreach ($this->emailList as $favorite): ?>
        <strong><?=$this->translate('Title') ?>:</strong>
        <?=$this->escape($favorite['title']) ?><br />
    <? endforeach; ?>
    <br />
    <label class="displayBlock" for="email_to"><?=$this->translate('To') ?>:</label>
    <input id="email_to" type="text" name="to" size="40" class="mainFocus <?=$this->jqueryValidation(array('required'=>'This field is required', 'email'=>'Email address is invalid')) ?>"/>
    <label class="displayBlock" for="email_from"><?=$this->translate('From') ?>:</label>
    <input id="email_from" type="text" name="from" size="40" class="<?=$this->jqueryValidation(array('required'=>'This field is required', 'email'=>'Email address is invalid')) ?>"/>
    <label class="displayBlock" for="email_message"><?=$this->translate('Message') ?>:</label>
    <textarea id="email_message" name="message" rows="3" cols="40"></textarea>
    <br />
    <input class="button" type="submit" name="submit" value="<?=$this->translate('Send') ?>"/>
    <? foreach ($emailIDS as $emailID): ?>
    <input type="hidden" name="ids[]" value="<?=$this->escape($emailID) ?>"/>
    <? endforeach; ?>
    <? if ($listID): ?>
      <input type="hidden" name="listID" value="<?=$this->escape($listID) ?>"/>
    <? endif; ?>
    <? if ($followupModule): ?>
    <input type="hidden" name="followupModule" value="<?=$this->escape($followupModule) ?>"/>
    <? endif; ?>
    <? if ($followupAction): ?>
    <input type="hidden" name="followupAction" value="<?=$this->escape($followupAction) ?>"/>
    <? endif; ?>
  </div>
</form>